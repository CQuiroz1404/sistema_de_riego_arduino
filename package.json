{
  "name": "sistema_de_riego_arduino",
  "version": "1.0.0",
  "description": "Sistema de riego automatizado con Arduino IoT y plataforma web MVC",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "dev:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/tailwind.css --watch",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/tailwind.css --minify"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/views/**",
      "!src/config/swagger.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CQuiroz1404/sistema_de_riego_arduino.git"
  },
  "keywords": [
    "arduino",
    "iot",
    "riego",
    "mvc",
    "express",
    "mysql"
  ],
  "author": "Sistema de Riego Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CQuiroz1404/sistema_de_riego_arduino/issues"
  },
  "homepage": "https://github.com/CQuiroz1404/sistema_de_riego_arduino#readme",
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^8.0.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "fullcalendar": "^6.1.19",
    "hbs": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mqtt": "^5.14.1",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "v-calendar": "^2.4.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "autoprefixer": "^10.4.22",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.14"
  }
}

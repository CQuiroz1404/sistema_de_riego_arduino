<!-- Componente Button Reutilizable -->
<!-- Uso: {{> button text="Click me" color="green" icon="fa-plus" href="/path"}} -->
{{#if href}}
<a href="{{href}}" 
   class="inline-flex items-center gap-2 px-4 py-2 rounded-lg font-medium transition-colors shadow-sm 
          {{#if fullWidth}}w-full justify-center{{/if}}
          {{#if size}}text-{{size}}{{else}}text-sm{{/if}}
          {{#if color}}
            {{#eq color "green"}}bg-green-600 hover:bg-green-700 text-white{{/eq}}
            {{#eq color "blue"}}bg-blue-600 hover:bg-blue-700 text-white{{/eq}}
            {{#eq color "red"}}bg-red-600 hover:bg-red-700 text-white{{/eq}}
            {{#eq color "gray"}}bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-gray-200{{/eq}}
          {{else}}
            bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-gray-200
          {{/if}}
          {{class}}">
    {{#if icon}}<i class="fas {{icon}}"></i>{{/if}}
    {{text}}
</a>
{{else}}
<button type="{{type}}" 
        {{#if disabled}}disabled{{/if}}
        {{#if onclick}}onclick="{{onclick}}"{{/if}}
        class="inline-flex items-center gap-2 px-4 py-2 rounded-lg font-medium transition-colors shadow-sm
               {{#if fullWidth}}w-full justify-center{{/if}}
               {{#if size}}text-{{size}}{{else}}text-sm{{/if}}
               {{#if disabled}}opacity-50 cursor-not-allowed{{/if}}
               {{#if color}}
                 {{#eq color "green"}}bg-green-600 hover:bg-green-700 text-white{{/eq}}
                 {{#eq color "blue"}}bg-blue-600 hover:bg-blue-700 text-white{{/eq}}
                 {{#eq color "red"}}bg-red-600 hover:bg-red-700 text-white{{/eq}}
                 {{#eq color "gray"}}bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-gray-200{{/eq}}
               {{else}}
                 bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-gray-200
               {{/if}}
               {{class}}">
    {{#if icon}}<i class="fas {{icon}}"></i>{{/if}}
    {{text}}
</button>
{{/if}}

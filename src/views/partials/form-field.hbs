<!-- Componente Form Field Reutilizable -->
<!-- Uso: {{> form-field label="Email" name="email" type="email" required=true}} -->
<div class="mb-4 {{class}}">
    {{#if label}}
    <label for="{{name}}" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
        {{label}}
        {{#if required}}<span class="text-red-500">*</span>{{/if}}
    </label>
    {{/if}}
    
    {{#if textarea}}
    <textarea 
        id="{{name}}" 
        name="{{name}}" 
        rows="{{rows}}"
        {{#if required}}required{{/if}}
        {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
        {{#if pattern}}pattern="{{pattern}}"{{/if}}
        {{#if minlength}}minlength="{{minlength}}"{{/if}}
        {{#if maxlength}}maxlength="{{maxlength}}"{{/if}}
        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-white transition-colors resize-none {{inputClass}}"
    >{{value}}</textarea>
    {{else if select}}
    <select 
        id="{{name}}" 
        name="{{name}}"
        {{#if required}}required{{/if}}
        {{#if multiple}}multiple{{/if}}
        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-white transition-colors {{inputClass}}">
        {{#if placeholder}}
        <option value="" disabled {{#unless value}}selected{{/unless}}>{{placeholder}}</option>
        {{/if}}
        {{{options}}}
    </select>
    {{else}}
    <div class="relative">
        <input 
            type="{{type}}" 
            id="{{name}}" 
            name="{{name}}" 
            value="{{value}}"
            {{#if required}}required{{/if}}
            {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
            {{#if pattern}}pattern="{{pattern}}"{{/if}}
            {{#if min}}min="{{min}}"{{/if}}
            {{#if max}}max="{{max}}"{{/if}}
            {{#if step}}step="{{step}}"{{/if}}
            {{#if minlength}}minlength="{{minlength}}"{{/if}}
            {{#if maxlength}}maxlength="{{maxlength}}"{{/if}}
            {{#if readonly}}readonly{{/if}}
            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-white transition-colors {{inputClass}}" />
        {{#if showPasswordToggle}}
        <button type="button" 
                onclick="togglePasswordVisibility('{{name}}')" 
                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
            <i class="fas fa-eye" id="{{name}}-icon"></i>
        </button>
        {{/if}}
    </div>
    {{/if}}
    
    {{#if help}}
    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{help}}</p>
    {{/if}}
    
    {{#if error}}
    <p class="mt-1 text-xs text-red-600 dark:text-red-400">{{error}}</p>
    {{/if}}
</div>

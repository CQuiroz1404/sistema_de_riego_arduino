<script>
document.addEventListener('DOMContentLoaded', function() {
  var calendarEl = document.getElementById('calendar');
  var calendar = new FullCalendar.Calendar(calendarEl, {
    initialView: 'dayGridMonth',
    height: 'auto',
    contentHeight: 600,
    locale: 'es',
    headerToolbar: {
      left: 'prev,next today',
      center: 'title',
      right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
    },
    buttonText: {
      today: 'Hoy',
      month: 'Mes',
      week: 'Semana',
      day: 'Día',
      list: 'Lista'
    },
    navLinks: true,
    editable: false,
    dayMaxEvents: 2,
    moreLinkText: function(num) {
      return '+ ' + num + ' más';
    },
    moreLinkClick: function(info) {
      // Mostrar modal con todos los eventos del día
      showDayEventsModal(info.date, info.allSegs);
      return 'none'; // Prevenir el popover por defecto
    },
    events: '/calendar/events',
    eventDidMount: function(info) {
      // Agregar tooltip con descripción
      if (info.event.extendedProps.description) {
        info.el.title = info.event.extendedProps.description;
      }
      
      // Agregar animación de entrada
      info.el.style.animation = 'fadeIn 0.3s ease-out';
    },
    moreLinkClick: function(info) {
      // Personalizar el popover de "ver más"
      return 'popover';
    },
    eventClick: function(info) {
      // Prevenir navegación del link
      info.jsEvent.preventDefault();
      
      // Mostrar información del evento con mejor formato
      const event = info.event;
      const startTime = event.start.toLocaleString('es-ES', { 
        hour: '2-digit', 
        minute: '2-digit',
        day: '2-digit',
        month: 'short'
      });
      const endTime = event.end ? event.end.toLocaleString('es-ES', { 
        hour: '2-digit', 
        minute: '2-digit' 
      }) : '';
      
      showEventModal(event.title, startTime, endTime, event.extendedProps.description || '', event.extendedProps.invernadero || '');
    },
    dateClick: function(info) {
      // Animación al hacer clic en una fecha
      info.dayEl.style.animation = 'pulse 0.3s ease-out';
      setTimeout(() => {
        info.dayEl.style.animation = '';
      }, 300);
    }
  });
  
  calendar.render();
  
  // Manejar cambio de semana con transición suave
  const semanaSelector = document.getElementById('semanaSelector');
  semanaSelector.addEventListener('change', function() {
    const semanaId = this.value;
    
    // Agregar efecto de carga
    calendarEl.style.opacity = '0.5';
    calendarEl.style.transition = 'opacity 0.3s ease';
    
    const newSource = {
      url: '/calendar/events',
      extraParams: semanaId ? { semana_id: semanaId } : {}
    };
    
    // Eliminar fuentes anteriores y agregar la nueva con el filtro
    const oldSource = calendar.getEventSources()[0];
    if (oldSource) {
      oldSource.remove();
    }
    
    calendar.addEventSource(newSource);
    
    // Restaurar opacidad
    setTimeout(() => {
      calendarEl.style.opacity = '1';
    }, 300);
  });
  
  // Observador para redibujar el calendario si cambia el tema
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.attributeName === 'class') {
        calendar.render();
      }
    });
  });
  observer.observe(document.documentElement, { attributes: true });
  
  // Ajustar altura del calendario en resize
  window.addEventListener('resize', function() {
    calendar.updateSize();
  });
});

// Función para mostrar modal de evento
function showEventModal(title, startTime, endTime, description, invernadero) {
  // Crear modal si no existe
  let modal = document.getElementById('eventModal');
  if (!modal) {
    modal = document.createElement('div');
    modal.id = 'eventModal';
    modal.className = 'fixed inset-0 z-50 flex items-center justify-center p-4 bg-black bg-opacity-50 hidden';
    modal.innerHTML = `
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-md w-full transform transition-all">
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 dark:from-blue-600 dark:to-blue-700 p-6 rounded-t-2xl">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="bg-white bg-opacity-20 p-2 rounded-lg">
                <i class="fas fa-calendar-check text-white text-xl"></i>
              </div>
              <h3 class="text-xl font-bold text-white" id="modalTitle">Evento</h3>
            </div>
            <button onclick="closeEventModal()" class="text-white hover:bg-white hover:bg-opacity-20 p-2 rounded-lg transition-all">
              <i class="fas fa-times text-xl"></i>
            </button>
          </div>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-start gap-3 p-3 bg-green-50 dark:bg-green-900/20 rounded-lg" id="modalInvernaderoContainer">
            <i class="fas fa-warehouse text-green-500 mt-1"></i>
            <div>
              <p class="text-sm font-semibold text-gray-600 dark:text-gray-400">Invernadero</p>
              <p class="text-gray-900 dark:text-white font-medium" id="modalInvernadero"></p>
            </div>
          </div>
          <div class="flex items-start gap-3 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
            <i class="fas fa-clock text-blue-500 mt-1"></i>
            <div>
              <p class="text-sm font-semibold text-gray-600 dark:text-gray-400">Inicio</p>
              <p class="text-gray-900 dark:text-white font-medium" id="modalStart"></p>
            </div>
          </div>
          <div class="flex items-start gap-3 p-3 bg-purple-50 dark:bg-purple-900/20 rounded-lg" id="modalEndContainer">
            <i class="fas fa-clock text-purple-500 mt-1"></i>
            <div>
              <p class="text-sm font-semibold text-gray-600 dark:text-gray-400">Fin</p>
              <p class="text-gray-900 dark:text-white font-medium" id="modalEnd"></p>
            </div>
          </div>
          <div class="flex items-start gap-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg" id="modalDescContainer">
            <i class="fas fa-info-circle text-gray-500 dark:text-gray-400 mt-1"></i>
            <div class="flex-1">
              <p class="text-sm font-semibold text-gray-600 dark:text-gray-400">Descripción</p>
              <p class="text-gray-900 dark:text-white" id="modalDesc"></p>
            </div>
          </div>
        </div>
        <div class="p-6 pt-0">
          <button onclick="closeEventModal()" class="w-full bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
            <i class="fas fa-check mr-2"></i>Entendido
          </button>
        </div>
      </div>
    `;
    document.body.appendChild(modal);
    
    // Cerrar al hacer clic fuera del modal
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        closeEventModal();
      }
    });
  }
  
  // Actualizar contenido
  document.getElementById('modalTitle').textContent = title;
  document.getElementById('modalStart').textContent = startTime;
  
  const invernaderoContainer = document.getElementById('modalInvernaderoContainer');
  if (invernadero) {
    document.getElementById('modalInvernadero').textContent = invernadero;
    invernaderoContainer.style.display = 'flex';
  } else {
    invernaderoContainer.style.display = 'none';
  }
  
  const endContainer = document.getElementById('modalEndContainer');
  if (endTime) {
    document.getElementById('modalEnd').textContent = endTime;
    endContainer.style.display = 'flex';
  } else {
    endContainer.style.display = 'none';
  }
  
  const descContainer = document.getElementById('modalDescContainer');
  if (description) {
    document.getElementById('modalDesc').textContent = description;
    descContainer.style.display = 'flex';
  } else {
    descContainer.style.display = 'none';
  }
  
  // Mostrar modal con animación
  modal.classList.remove('hidden');
  setTimeout(() => {
    modal.querySelector('.bg-white').style.transform = 'scale(1)';
    modal.querySelector('.bg-white').style.opacity = '1';
  }, 10);
}

function closeEventModal() {
  const modal = document.getElementById('eventModal');
  if (modal) {
    modal.querySelector('.bg-white').style.transform = 'scale(0.95)';
    modal.querySelector('.bg-white').style.opacity = '0';
    setTimeout(() => {
      modal.classList.add('hidden');
    }, 200);
  }
}

// Función para mostrar modal con todos los eventos del día
function showDayEventsModal(date, segments) {
  // Crear modal si no existe
  let modal = document.getElementById('dayEventsModal');
  if (!modal) {
    modal = document.createElement('div');
    modal.id = 'dayEventsModal';
    modal.className = 'fixed inset-0 z-50 flex items-center justify-center p-4 bg-black bg-opacity-50 hidden';
    modal.innerHTML = `
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-2xl w-full transform transition-all max-h-[90vh] flex flex-col">
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 dark:from-blue-600 dark:to-blue-700 p-6 rounded-t-2xl flex-shrink-0">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="bg-white bg-opacity-20 p-3 rounded-xl">
                <i class="fas fa-calendar-day text-white text-2xl"></i>
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white" id="dayModalTitle">Eventos del día</h3>
                <p class="text-blue-100 text-sm mt-1" id="dayModalDate"></p>
              </div>
            </div>
            <button onclick="closeDayEventsModal()" class="text-white hover:bg-white hover:bg-opacity-20 p-2 rounded-lg transition-all">
              <i class="fas fa-times text-2xl"></i>
            </button>
          </div>
        </div>
        <div class="flex-1 overflow-y-auto p-6" id="dayEventsContainer" style="max-height: calc(90vh - 200px);">
          <!-- Los eventos se cargarán aquí -->
        </div>
        <div class="p-6 pt-0 border-t border-gray-200 dark:border-gray-700 flex-shrink-0">
          <button onclick="closeDayEventsModal()" class="w-full bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
            <i class="fas fa-check mr-2"></i>Cerrar
          </button>
        </div>
      </div>
    `;
    document.body.appendChild(modal);
    
    // Cerrar al hacer clic fuera del modal
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        closeDayEventsModal();
      }
    });
  }
  
  // Formatear la fecha
  const formattedDate = date.toLocaleDateString('es-ES', { 
    weekday: 'long', 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
  
  document.getElementById('dayModalDate').textContent = formattedDate.charAt(0).toUpperCase() + formattedDate.slice(1);
  
  // Obtener todos los eventos del día
  const events = segments.map(seg => seg.event);
  const uniqueEvents = [...new Map(events.map(e => [e.id, e])).values()]; // Eliminar duplicados
  
  // Ordenar eventos por hora
  uniqueEvents.sort((a, b) => a.start - b.start);
  
  // Crear HTML para los eventos
  const container = document.getElementById('dayEventsContainer');
  container.innerHTML = `
    <div class="space-y-3">
      ${uniqueEvents.map((event, index) => {
        const startTime = event.start.toLocaleString('es-ES', { 
          hour: '2-digit', 
          minute: '2-digit'
        });
        const endTime = event.end ? event.end.toLocaleString('es-ES', { 
          hour: '2-digit', 
          minute: '2-digit' 
        }) : '';
        
        const bgColor = event.backgroundColor || '#3b82f6';
        
        return `
          <div class="bg-gradient-to-r from-gray-50 to-white dark:from-gray-700 dark:to-gray-800 rounded-xl p-4 border-l-4 hover:shadow-lg transition-all cursor-pointer transform hover:scale-[1.02]" 
               style="border-left-color: ${bgColor}"
               onclick='showEventDetailsFromDay(${JSON.stringify({
                 title: event.title,
                 start: startTime,
                 end: endTime,
                 description: event.extendedProps?.description || '',
                 invernadero: event.extendedProps?.invernadero || ''
               })})'>
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <div class="w-3 h-3 rounded-full animate-pulse" style="background-color: ${bgColor}"></div>
                  <h4 class="font-bold text-gray-900 dark:text-white text-lg">${event.title}</h4>
                </div>
                ${event.extendedProps?.invernadero ? `
                  <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 mb-2">
                    <i class="fas fa-warehouse text-green-500"></i>
                    <span>${event.extendedProps.invernadero}</span>
                  </div>
                ` : ''}
                <div class="flex items-center gap-4 text-sm">
                  <div class="flex items-center gap-2 text-blue-600 dark:text-blue-400 font-medium">
                    <i class="fas fa-clock"></i>
                    <span>${startTime}</span>
                  </div>
                  ${endTime ? `
                    <div class="flex items-center gap-2 text-purple-600 dark:text-purple-400">
                      <i class="fas fa-arrow-right text-xs"></i>
                      <span>${endTime}</span>
                    </div>
                  ` : ''}
                </div>
                ${event.extendedProps?.description ? `
                  <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 line-clamp-2">
                    <i class="fas fa-info-circle mr-1"></i>${event.extendedProps.description}
                  </p>
                ` : ''}
              </div>
              <div class="flex-shrink-0">
                <i class="fas fa-chevron-right text-gray-400"></i>
              </div>
            </div>
          </div>
        `;
      }).join('')}
    </div>
  `;
  
  // Agregar badge con el total de eventos
  document.getElementById('dayModalTitle').innerHTML = `
    Eventos del día 
    <span class="ml-2 bg-white bg-opacity-20 text-white text-sm font-bold px-3 py-1 rounded-full">${uniqueEvents.length}</span>
  `;
  
  // Mostrar modal con animación
  modal.classList.remove('hidden');
  setTimeout(() => {
    modal.querySelector('.bg-white').style.transform = 'scale(1)';
    modal.querySelector('.bg-white').style.opacity = '1';
  }, 10);
}

function closeDayEventsModal() {
  const modal = document.getElementById('dayEventsModal');
  if (modal) {
    modal.querySelector('.bg-white').style.transform = 'scale(0.95)';
    modal.querySelector('.bg-white').style.opacity = '0';
    setTimeout(() => {
      modal.classList.add('hidden');
    }, 200);
  }
}

function showEventDetailsFromDay(eventData) {
  // Cerrar el modal de día
  closeDayEventsModal();
  
  // Esperar a que se cierre y mostrar el detalle
  setTimeout(() => {
    showEventModal(
      eventData.title, 
      eventData.start, 
      eventData.end, 
      eventData.description, 
      eventData.invernadero
    );
  }, 250);
}
</script>


<!DOCTYPE html>
<html lang="es" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - Sistema de Riego IoT</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: '#10B981',
                        secondary: '#3B82F6',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="/js/theme.js"></script>
    <script src="/js/main.js"></script>
    <style>
        /* Custom styles for calendar page */
        .vc-container {
            border: none;
            font-family: inherit;
            width: 100%;
        }
        .vc-pane-container {
            width: 100%;
        }
    </style>
</head>
<body class="h-full bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
    {{> navbar}}
    
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3">
                <i class="fas fa-calendar-alt text-blue-500"></i> Calendario de Riego
            </h1>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700 max-w-4xl mx-auto">
            <div id="app">
                <v-calendar is-expanded :attributes="attributes" :is-dark="isDark"></v-calendar>
            </div>
        </div>
    </div>

    <!-- Vue.js 2 -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <!-- V-Calendar 2 -->
    <script src="https://unpkg.com/v-calendar@2.4.2/lib/v-calendar.umd.min.js"></script>

    <script>
        new Vue({
            el: '#app',
            data: {
                isDark: document.documentElement.classList.contains('dark'),
                attributes: [
                    {
                        key: 'today',
                        highlight: {
                            color: 'green',
                            fillMode: 'light',
                        },
                        dates: new Date(),
                        popover: {
                            label: 'Hoy',
                        },
                    }
                ]
            },
            mounted() {
                // Listen for theme changes
                const observer = new MutationObserver((mutations) => {
                    mutations.forEach((mutation) => {
                        if (mutation.attributeName === 'class') {
                            this.isDark = document.documentElement.classList.contains('dark');
                        }
                    });
                });
                
                observer.observe(document.documentElement, {
                    attributes: true
                });
            }
        });
    </script>
</body>
</html>

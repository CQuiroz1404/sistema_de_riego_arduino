<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-8">
    <a href="/invernaderos/{{invernadero.id}}/schedule" 
       class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors flex items-center gap-2 mb-4">
      <i class="fas fa-arrow-left"></i>
      Volver al Calendario
    </a>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3">
      <i class="fas fa-calendar-plus text-green-500"></i>
      Programar Evento de Riego
    </h1>
    <p class="text-gray-600 dark:text-gray-400 mt-1">Invernadero: {{invernadero.descripcion}}</p>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 p-6">
    <form action="/invernaderos/{{invernadero.id}}/schedule" method="POST" class="space-y-6">
      
      <!-- Semana -->
      <div>
        <label for="semana_id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <i class="fas fa-seedling text-green-500 mr-1"></i>
          Semana del Ciclo
        </label>
        <select id="semana_id" name="semana_id" required
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
          <option value="">Seleccionar semana...</option>
          {{#each semanas}}
          <option value="{{this.id}}">{{this.nombre}}</option>
          {{/each}}
        </select>
      </div>

      <!-- Días de la semana -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <i class="fas fa-calendar-week text-blue-500 mr-1"></i>
          Días de la Semana
        </label>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          {{#each (json '["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo"]')}}
          <label class="flex items-center gap-2 p-3 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <input type="checkbox" name="dias_semana" value="{{this}}" 
                   class="rounded text-blue-600 focus:ring-blue-500">
            <span class="text-sm text-gray-700 dark:text-gray-300">{{this}}</span>
          </label>
          {{/each}}
        </div>
      </div>

      <!-- Hora de inicio -->
      <div>
        <label for="hora_inicio" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <i class="fas fa-clock text-indigo-500 mr-1"></i>
          Hora de Inicio
        </label>
        <input type="time" id="hora_inicio" name="hora_inicio" required
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
      </div>

      <!-- Duración -->
      <div>
        <label for="duracion_minutos" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <i class="fas fa-hourglass-half text-yellow-500 mr-1"></i>
          Duración (minutos)
        </label>
        <input type="number" id="duracion_minutos" name="duracion_minutos" min="1" max="180" required
               placeholder="Ej: 15"
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Entre 1 y 180 minutos</p>
      </div>

      <!-- Rango de fechas (opcional) -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="fecha_inicio" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            <i class="fas fa-calendar-day text-blue-500 mr-1"></i>
            Fecha Inicio (opcional)
          </label>
          <input type="date" id="fecha_inicio" name="fecha_inicio"
                 class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
        </div>
        <div>
          <label for="fecha_fin" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            <i class="fas fa-calendar-check text-green-500 mr-1"></i>
            Fecha Fin (opcional)
          </label>
          <input type="date" id="fecha_fin" name="fecha_fin"
                 class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
        </div>
      </div>

      <!-- Botones -->
      <div class="flex gap-3 pt-4">
        <button type="submit"
                class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors shadow-sm flex items-center justify-center gap-2">
          <i class="fas fa-save"></i>
          Guardar Evento
        </button>
        <a href="/invernaderos/{{invernadero.id}}/schedule"
           class="px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg font-medium hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
          Cancelar
        </a>
      </div>
    </form>
  </div>
</div>

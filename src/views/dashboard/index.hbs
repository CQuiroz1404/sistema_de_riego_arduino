<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Sistema de Riego IoT</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    {{> navbar}}
    
    <div class="container">
        <div class="dashboard-header">
            <h1><i class="fas fa-chart-line"></i> Dashboard</h1>
            <div class="header-actions">
                <div class="live-indicator">
                    <span class="pulse-dot"></span>
                    <span>EN VIVO</span>
                </div>
                <button onclick="refreshData()" class="btn btn-secondary">
                    <i class="fas fa-sync-alt"></i> Actualizar
                </button>
            </div>
        </div>
        
        <!-- Estadísticas -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon blue">
                    <i class="fas fa-microchip"></i>
                </div>
                <div class="stat-info">
                    <h3>{{#if stats.total_dispositivos}}{{stats.total_dispositivos}}{{else}}0{{/if}}</h3>
                    <p>Dispositivos</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon green">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-info">
                    <h3>{{#if stats.dispositivos_activos}}{{stats.dispositivos_activos}}{{else}}0{{/if}}</h3>
                    <p>Activos</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon orange">
                    <i class="fas fa-thermometer-half"></i>
                </div>
                <div class="stat-info">
                    <h3>{{#if stats.total_sensores}}{{stats.total_sensores}}{{else}}0{{/if}}</h3>
                    <p>Sensores</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon red">
                    <i class="fas fa-bell"></i>
                </div>
                <div class="stat-info">
                    <h3>{{#if stats.alertas_no_leidas}}{{stats.alertas_no_leidas}}{{else}}0{{/if}}</h3>
                    <p>Alertas</p>
                </div>
            </div>
        </div>
        
        <!-- Alertas -->
        {{#if alerts}}
        {{#if (gt alerts.length 0)}}
        <div class="alerts-section">
            <h2><i class="fas fa-exclamation-triangle"></i> Alertas Recientes</h2>
            <div class="alerts-list">
                {{#each (limit alerts 5)}}
                <div class="alert-item alert-{{this.severidad}}">
                    <div class="alert-icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <div class="alert-content">
                        <p>{{this.mensaje}}</p>
                        <small>{{formatDate this.fecha_creacion}}</small>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}
        {{/if}}
        
        <!-- Dispositivos -->
        <div class="devices-section">
            <div class="section-header">
                <h2><i class="fas fa-microchip"></i> Dispositivos</h2>
                <a href="/devices/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar Dispositivo
                </a>
            </div>
            
            {{#if devices}}
            {{#if (gt devices.length 0)}}
            <div class="devices-grid">
                {{#each devices}}
                <div class="device-card" data-device-id="{{this.id}}">
                    <div class="device-header">
                        <h3>{{this.nombre}}</h3>
                        <div style="display: flex; gap: 8px; align-items: center;">
                            <div class="connection-status" data-connection-status="{{this.id}}">
                                <span class="connection-dot offline"></span>
                                <span class="connection-text">Verificando...</span>
                            </div>
                            <span class="status-badge status-{{this.estado}}">
                                {{this.estado}}
                            </span>
                        </div>
                    </div>
                    <div class="device-info">
                        <p><i class="fas fa-map-marker-alt"></i> {{#if this.ubicacion}}{{this.ubicacion}}{{else}}Sin ubicación{{/if}}</p>
                        <p><i class="fas fa-clock"></i> 
                            <span class="last-connection-time" data-last-connection="{{this.id}}">
                                {{#if this.ultima_conexion}}
                                    Última vez: {{formatDate this.ultima_conexion}}
                                {{else}}
                                    Sin conexión
                                {{/if}}
                            </span>
                        </p>
                    </div>
                    <div class="device-stats">
                        <span><i class="fas fa-thermometer-half"></i> {{#if this.total_sensores}}{{this.total_sensores}}{{else}}0{{/if}} sensores</span>
                        <span><i class="fas fa-tint"></i> {{#if this.total_actuadores}}{{this.total_actuadores}}{{else}}0{{/if}} actuadores</span>
                    </div>
                    <div class="device-actions">
                        <a href="/devices/{{this.id}}" class="btn btn-sm btn-secondary">
                            <i class="fas fa-eye"></i> Ver Detalles
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h3>No hay dispositivos</h3>
                <p>Comienza agregando tu primer dispositivo Arduino</p>
                <a href="/devices/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar Dispositivo
                </a>
            </div>
            {{/if}}
            {{else}}
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h3>No hay dispositivos</h3>
                <p>Comienza agregando tu primer dispositivo Arduino</p>
                <a href="/devices/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar Dispositivo
                </a>
            </div>
            {{/if}}
        </div>
    </div>
    
    <script src="/js/dashboard.js"></script>
</body>
</html>

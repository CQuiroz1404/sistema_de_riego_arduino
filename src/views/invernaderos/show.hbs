<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
    <div class="flex items-center gap-4">
      <a href="/invernaderos" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors">
        <i class="fas fa-arrow-left text-xl"></i>
      </a>
      <div>
        <div class="flex items-center gap-3">
          <i class="fas fa-warehouse text-green-500 text-3xl"></i>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
            Invernadero #{{invernadero.id}}
          </h1>
        </div>
        <p class="text-gray-600 dark:text-gray-400 mt-1 flex items-center gap-2">
          <i class="fas fa-map-marker-alt"></i> {{#if invernadero.ubicacion}}{{invernadero.ubicacion}}{{else}}Sin ubicación{{/if}}
        </p>
        <p class="text-gray-600 dark:text-gray-400 mt-1">{{invernadero.descripcion}}</p>
      </div>
    </div>
    <div class="flex gap-3">
      <a href="/invernaderos/{{invernadero.id}}/virtual" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm flex items-center gap-2">
        <i class="fas fa-vr-cardboard"></i> Vista 3D
      </a>
      <a href="/invernaderos/{{invernadero.id}}/edit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm flex items-center gap-2">
        <i class="fas fa-edit"></i> Editar
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Estado Actual -->
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
          <i class="fas fa-chart-pie text-blue-500"></i> Estado Actual
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg text-center">
            <i class="fas fa-thermometer-half text-3xl text-orange-500 mb-2"></i>
            <p class="text-sm text-gray-500 dark:text-gray-400">Temperatura</p>
            <h4 class="text-2xl font-bold text-gray-900 dark:text-white">{{invernadero.temp_actual}}°C</h4>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg text-center">
            <i class="fas fa-tint text-3xl text-blue-500 mb-2"></i>
            <p class="text-sm text-gray-500 dark:text-gray-400">Humedad</p>
            <h4 class="text-2xl font-bold text-gray-900 dark:text-white">{{invernadero.hum_actual}}%</h4>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg text-center">
            <i class="fas fa-shower text-3xl text-{{#if invernadero.riego}}blue{{else}}gray{{/if}}-500 mb-2"></i>
            <p class="text-sm text-gray-500 dark:text-gray-400">Riego</p>
            <h4 class="text-2xl font-bold text-gray-900 dark:text-white">{{#if invernadero.riego}}Activado{{else}}Desactivado{{/if}}</h4>
          </div>
        </div>
      </div>

      <!-- Planta Info -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
          <i class="fas fa-leaf text-green-500"></i> Información de Planta
        </h3>
        {{#if invernadero.planta}}
        <div class="space-y-4">
          <div class="flex justify-between items-center border-b border-gray-100 dark:border-gray-700 pb-4">
            <div>
              <h4 class="text-xl font-bold text-gray-900 dark:text-white">{{invernadero.planta.nombre}}</h4>
              <p class="text-sm text-gray-500 dark:text-gray-400">{{invernadero.planta.tipo_planta.nombre}}</p>
            </div>
            <span class="px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400">
              Asignada
            </span>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-orange-50 dark:bg-orange-900/20 p-4 rounded-lg border border-orange-100 dark:border-orange-800/30">
              <h5 class="font-medium text-orange-800 dark:text-orange-300 mb-2">Rango Temperatura</h5>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600 dark:text-gray-400">Mínima:</span>
                <span class="font-bold text-gray-900 dark:text-white">{{invernadero.planta.rango_temperatura.temp_min}}°C</span>
              </div>
              <div class="flex justify-between text-sm mt-1">
                <span class="text-gray-600 dark:text-gray-400">Máxima:</span>
                <span class="font-bold text-gray-900 dark:text-white">{{invernadero.planta.rango_temperatura.temp_max}}°C</span>
              </div>
            </div>
            <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg border border-blue-100 dark:border-blue-800/30">
              <h5 class="font-medium text-blue-800 dark:text-blue-300 mb-2">Rango Humedad</h5>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600 dark:text-gray-400">Mínima:</span>
                <span class="font-bold text-gray-900 dark:text-white">{{invernadero.planta.rango_humedad.hum_min}}%</span>
              </div>
              <div class="flex justify-between text-sm mt-1">
                <span class="text-gray-600 dark:text-gray-400">Máxima:</span>
                <span class="font-bold text-gray-900 dark:text-white">{{invernadero.planta.rango_humedad.hum_max}}%</span>
              </div>
            </div>
          </div>
        </div>
        {{else}}
        <div class="text-center py-8 text-gray-500 dark:text-gray-400">
          <i class="fas fa-seedling text-4xl mb-3 text-gray-300 dark:text-gray-600"></i>
          <p>No hay planta asignada a este invernadero</p>
          <a href="/invernaderos/{{invernadero.id}}/edit" class="text-green-600 hover:text-green-700 font-medium mt-2 inline-block">Asignar Planta</a>
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Acciones Rápidas -->
    <div class="lg:col-span-1 flex flex-col space-y-6">
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700 flex-1">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
          <i class="fas fa-bolt text-yellow-500"></i> Acciones
        </h3>
        <div class="space-y-3">
          <button id="btnRiegoManual" class="w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg font-medium transition-colors shadow-sm flex items-center justify-center gap-2">
            <i class="fas fa-shower"></i> <span>Activar Riego Manual</span>
          </button>
          <a href="/invernaderos/{{invernadero.id}}/schedule" class="w-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-800 dark:text-white px-4 py-3 rounded-lg font-medium transition-colors shadow-sm flex items-center justify-center gap-2">
            <i class="fas fa-calendar-alt"></i> Ver Calendario
          </a>
          <a href="/invernaderos/{{invernadero.id}}/historial" class="w-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-800 dark:text-white px-4 py-3 rounded-lg font-medium transition-colors shadow-sm flex items-center justify-center gap-2">
            <i class="fas fa-history"></i> Ver Historial
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Dispositivos IoT -->
  <div class="mt-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700">
    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
      <i class="fas fa-microchip text-blue-500"></i> Dispositivos IoT ({{#if invernadero.dispositivos}}{{invernadero.dispositivos.length}}{{else}}0{{/if}})
    </h3>
    {{#if invernadero.dispositivos}}
      {{#if (gt invernadero.dispositivos.length 0)}}
        <div class="grid grid-cols-1 gap-3">
          {{#each invernadero.dispositivos}}
          <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg border border-gray-200 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-500 transition-colors">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h4 class="font-bold text-gray-900 dark:text-white flex items-center gap-2">
                  <i class="fas fa-microchip text-blue-500"></i> {{this.nombre}}
                </h4>
                {{#if this.descripcion}}
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{{this.descripcion}}</p>
                {{/if}}
                {{#if this.ubicacion}}
                <p class="text-xs text-gray-400 dark:text-gray-500 mt-1"><i class="fas fa-map-marker-alt"></i> {{this.ubicacion}}</p>
                {{/if}}
              </div>
              <div class="flex flex-col items-end gap-2">
                <span class="px-2 py-1 rounded-full text-xs font-medium {{#if (eq this.estado 'activo')}}bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400{{else if (eq this.estado 'mantenimiento')}}bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400{{else}}bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400{{/if}}">
                  {{this.estado}}
                </span>
                <a href="/devices/{{this.id}}" class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 text-sm font-medium flex items-center gap-1">
                  <i class="fas fa-external-link-alt"></i> Ver
                </a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      {{else}}
        <div class="text-center py-8 text-gray-500 dark:text-gray-400">
          <i class="fas fa-microchip text-4xl mb-3 text-gray-300 dark:text-gray-600"></i>
          <p>No hay dispositivos vinculados</p>
          <p class="text-sm mt-2">Asigna dispositivos desde la sección de Dispositivos</p>
        </div>
      {{/if}}
    {{else}}
      <div class="text-center py-8 text-gray-500 dark:text-gray-400">
        <i class="fas fa-microchip text-4xl mb-3 text-gray-300 dark:text-gray-600"></i>
        <p>No hay dispositivos vinculados</p>
        <p class="text-sm mt-2">Asigna dispositivos desde la sección de Dispositivos</p>
      </div>
    {{/if}}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Buscar el botón por su contenido de texto o ID
    const riegoBtn = document.getElementById('btnRiegoManual');

    if (riegoBtn) {
      riegoBtn.addEventListener('click', function() {
        toggleRiegoManual('{{invernadero.id}}');
      });
    }
  });

  async function toggleRiegoManual(id) {
      // Feedback visual inmediato
      const btn = document.getElementById('btnRiegoManual');
      const originalContent = btn.innerHTML;
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Procesando...';

      try {
          const response = await fetch(`/invernaderos/${id}/riego`, {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json',
                  'Accept': 'application/json'
              }
          });
          
          const data = await response.json();
          
          if (data.success) {
              // Mostrar éxito
              btn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
              btn.classList.add('bg-green-600', 'hover:bg-green-700');
              btn.innerHTML = '<i class="fas fa-check"></i> Comando Enviado';
              
              setTimeout(() => {
                  location.reload();
              }, 1500);
          } else {
              alert('Error: ' + (data.message || 'No se pudo activar el riego'));
              btn.innerHTML = originalContent;
              btn.disabled = false;
          }
      } catch (error) {
          console.error(error);
          alert('Error de conexión al intentar activar el riego');
          btn.innerHTML = originalContent;
          btn.disabled = false;
      }
  }
</script>

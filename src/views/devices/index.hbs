<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dispositivos - Sistema de Riego IoT</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    {{> navbar}}
    
    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-microchip"></i> Mis Dispositivos</h1>
            <a href="/devices/create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nuevo Dispositivo
            </a>
        </div>
        
        {{#if devices}}
        {{#if (gt devices.length 0)}}
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Ubicación</th>
                        <th>Estado</th>
                        <th>Última Conexión</th>
                        <th>Sensores</th>
                        <th>Actuadores</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each devices}}
                    <tr>
                        <td><strong>{{this.nombre}}</strong></td>
                        <td>{{#if this.ubicacion}}{{this.ubicacion}}{{else}}-{{/if}}</td>
                        <td>
                            <div class="status-container">
                                <span class="connection-badge {{#if this.isConnected}}connected{{else}}disconnected{{/if}}" id="connection-{{this.id}}">
                                    <i class="fas fa-circle"></i> {{#if this.isConnected}}Conectado{{else}}Desconectado{{/if}}
                                </span>
                                <span class="status-badge status-{{this.estado}}">
                                    {{this.estado}}
                                </span>
                            </div>
                        </td>
                        <td>
                            {{#if this.ultima_conexion}}
                                {{formatDate this.ultima_conexion}}
                            {{else}}
                                Nunca
                            {{/if}}
                        </td>
                        <td>{{#if this.total_sensores}}{{this.total_sensores}}{{else}}0{{/if}}</td>
                        <td>{{#if this.total_actuadores}}{{this.total_actuadores}}{{else}}0{{/if}}</td>
                        <td>
                            <a href="/devices/{{this.id}}" class="btn btn-sm btn-secondary">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/devices/{{this.id}}/edit" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button onclick="deleteDevice({{this.id}})" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h3>No hay dispositivos</h3>
            <p>Comienza agregando tu primer dispositivo Arduino</p>
        </div>
        {{/if}}
        {{else}}
        <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h3>No hay dispositivos</h3>
            <p>Comienza agregando tu primer dispositivo Arduino</p>
        </div>
        {{/if}}
    </div>
    
    <script src="/js/main.js"></script>
    <script src="/js/devices.js"></script>
    <script>
        // Actualizar estado de conexión de dispositivos cada 5 segundos
        async function updateConnectionStatus() {
            const rows = document.querySelectorAll('tbody tr');
            
            for (const row of rows) {
                const viewBtn = row.querySelector('a[href*="/devices/"]');
                if (!viewBtn) continue;
                
                const deviceId = viewBtn.href.split('/').pop();
                try {
                    const response = await fetch(`/devices/${deviceId}/status`);
                    const result = await response.json();
                    
                    if (result.success) {
                        const badge = document.getElementById(`connection-${deviceId}`);
                        if (badge) {
                            const isConnected = result.data.connected;
                            badge.className = `connection-badge ${isConnected ? 'connected' : 'disconnected'}`;
                            badge.innerHTML = `<i class="fas fa-circle"></i> ${isConnected ? 'Conectado' : 'Desconectado'}`;
                        }
                    }
                } catch (error) {
                    console.error(`Error verificando estado de dispositivo ${deviceId}:`, error);
                }
            }
        }
        
        // Verificar al cargar la página
        updateConnectionStatus();
        
        // Verificar cada 5 segundos
        setInterval(updateConnectionStatus, 5000);
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="es" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{device.nombre}} - Sistema de Riego IoT</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: '#10B981',
                        secondary: '#3B82F6',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="/js/theme.js"></script>
    <script src="/js/main.js"></script>
</head>
<body class="h-full bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
    {{> navbar}}
    
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3">
                    <i class="fas fa-microchip text-blue-500"></i> {{device.nombre}}
                </h1>
                <p class="text-gray-600 dark:text-gray-400 mt-1 flex items-center gap-2">
                    <i class="fas fa-map-marker-alt"></i> {{#if device.ubicacion}}{{device.ubicacion}}{{else}}Sin ubicación{{/if}}
                </p>
            </div>
            <div class="flex gap-3">
                <a href="/devices/{{device.id}}/edit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm flex items-center gap-2">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a href="/devices" class="bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm flex items-center gap-2">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
        
        <div class="space-y-6">
            <!-- Info Card -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                    <i class="fas fa-info-circle text-blue-500"></i> Información del Dispositivo
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg">
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Estado</label>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-{{#if (eq device.estado 'activo')}}green{{else}}gray{{/if}}-100 text-{{#if (eq device.estado 'activo')}}green{{else}}gray{{/if}}-800 dark:bg-{{#if (eq device.estado 'activo')}}green{{else}}gray{{/if}}-900/30 dark:text-{{#if (eq device.estado 'activo')}}green{{else}}gray{{/if}}-400">
                            {{device.estado}}
                        </span>
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg">
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Última Conexión</label>
                        <span class="text-sm text-gray-800 dark:text-gray-200">{{#if device.ultima_conexion}}{{formatDate device.ultima_conexion}}{{else}}Nunca{{/if}}</span>
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg">
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Fecha Creación</label>
                        <span class="text-sm text-gray-800 dark:text-gray-200">{{formatDate device.fecha_creacion}}</span>
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg col-span-1 md:col-span-2">
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">API Key</label>
                        <code class="text-sm font-mono text-gray-800 dark:text-gray-200 break-all">{{device.api_key}}</code>
                    </div>
                </div>
                {{#if device.descripcion}}
                <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Descripción</label>
                    <p class="text-sm text-gray-800 dark:text-gray-200">{{device.descripcion}}</p>
                </div>
                {{/if}}
            </div>
            
            <!-- Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700 text-center">
                    <i class="fas fa-thermometer-half text-3xl text-green-500 mb-2"></i>
                    <h4 class="text-3xl font-bold text-gray-900 dark:text-white">{{stats.total_sensores}}</h4>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Sensores</p>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700 text-center">
                    <i class="fas fa-tint text-3xl text-blue-500 mb-2"></i>
                    <h4 class="text-3xl font-bold text-gray-900 dark:text-white">{{stats.total_actuadores}}</h4>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Actuadores</p>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700 text-center">
                    <i class="fas fa-chart-line text-3xl text-purple-500 mb-2"></i>
                    <h4 class="text-3xl font-bold text-gray-900 dark:text-white">{{stats.total_lecturas}}</h4>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Lecturas</p>
                </div>
            </div>
            
            <!-- Sensors -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                    <i class="fas fa-thermometer-half text-orange-500"></i> Sensores
                </h3>
                {{#if sensors}}
                {{#if (gt sensors.length 0)}}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {{#each sensors}}
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 border border-gray-200 dark:border-gray-600">
                        <div class="flex justify-between items-start mb-3">
                            <h4 class="font-bold text-gray-900 dark:text-white">{{this.nombre}}</h4>
                            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">{{this.tipo}}</span>
                        </div>
                        <div class="space-y-2 text-sm">
                            <p class="text-gray-600 dark:text-gray-300"><i class="fas fa-microchip w-5"></i> Pin: {{this.pin}}</p>
                            <p class="text-gray-600 dark:text-gray-300"><i class="fas fa-ruler w-5"></i> Unidad: {{this.unidad}}</p>
                            {{#if this.ultimo_valor}}
                            <p class="font-bold text-gray-900 dark:text-white mt-2 pt-2 border-t border-gray-200 dark:border-gray-600">
                                <i class="fas fa-chart-line w-5 text-green-500"></i> {{this.ultimo_valor}} {{this.unidad}}
                            </p>
                            {{/if}}
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                    No hay sensores configurados
                </div>
                {{/if}}
                {{else}}
                <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                    No hay sensores configurados
                </div>
                {{/if}}
            </div>
            
            <!-- Actuators -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-100 dark:border-gray-700">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                    <i class="fas fa-tint text-blue-500"></i> Actuadores
                </h3>
                {{#if actuators}}
                {{#if (gt actuators.length 0)}}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {{#each actuators}}
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 border border-gray-200 dark:border-gray-600">
                        <div class="flex justify-between items-start mb-3">
                            <h4 class="font-bold text-gray-900 dark:text-white">{{this.nombre}}</h4>
                            <span class="px-2.5 py-0.5 rounded text-xs font-medium bg-{{#if (eq this.estado 'encendido')}}green{{else}}gray{{/if}}-100 text-{{#if (eq this.estado 'encendido')}}green{{else}}gray{{/if}}-800 dark:bg-{{#if (eq this.estado 'encendido')}}green{{else}}gray{{/if}}-900/30 dark:text-{{#if (eq this.estado 'encendido')}}green{{else}}gray{{/if}}-400">
                                {{this.estado}}
                            </span>
                        </div>
                        <div class="space-y-2 text-sm mb-4">
                            <p class="text-gray-600 dark:text-gray-300"><i class="fas fa-microchip w-5"></i> Tipo: {{this.tipo}}</p>
                            <p class="text-gray-600 dark:text-gray-300"><i class="fas fa-plug w-5"></i> Pin: {{this.pin}}</p>
                        </div>
                        <div class="flex gap-2">
                            <button onclick="controlActuator({{this.id}}, 'encender')" class="flex-1 bg-green-600 hover:bg-green-700 text-white px-3 py-1.5 rounded text-sm font-medium transition-colors shadow-sm">
                                <i class="fas fa-power-off mr-1"></i> Encender
                            </button>
                            <button onclick="controlActuator({{this.id}}, 'apagar')" class="flex-1 bg-red-600 hover:bg-red-700 text-white px-3 py-1.5 rounded text-sm font-medium transition-colors shadow-sm">
                                <i class="fas fa-stop mr-1"></i> Apagar
                            </button>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                    No hay actuadores configurados
                </div>
                {{/if}}
                {{else}}
                <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                    No hay actuadores configurados
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    
    <script>
        async function controlActuator(actuatorId, accion) {
            try {
                const response = await fetch(`/api/arduino/actuators/${actuatorId}/control`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ accion })
                });
                
                const data = await response.json();
                if (data.success) {
                    // alert(`Actuador ${accion === 'encender' ? 'encendido' : 'apagado'} correctamente`);
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (error) {
                alert('Error de conexión');
            }
        }
    </script>
</body>
</html>

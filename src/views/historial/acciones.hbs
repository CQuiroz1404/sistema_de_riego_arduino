<div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
            <div>
                <a href="/invernaderos/{{invernadero.id}}" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors flex items-center gap-2 mb-2">
                    <i class="fas fa-arrow-left"></i> Volver al Invernadero
                </a>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3">
                    <i class="fas fa-clipboard-list text-blue-500"></i> Historial de Acciones
                </h1>
                <p class="text-gray-600 dark:text-gray-400 mt-1">Registro de eventos y ejecuciones en {{invernadero.descripcion}}</p>
            </div>
            
            <div class="flex bg-gray-200 dark:bg-gray-700 rounded-lg p-1">
                <a href="/invernaderos/{{invernadero.id}}/historial" class="px-4 py-2 rounded-md text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white font-medium text-sm transition-all">
                    Sensores
                </a>
                <a href="/invernaderos/{{invernadero.id}}/historial?tipo=acciones" class="px-4 py-2 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white shadow-sm font-medium text-sm transition-all">
                    Acciones
                </a>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-gray-50 dark:bg-gray-700/50 border-b border-gray-100 dark:border-gray-700">
                            <th class="p-4 font-semibold text-gray-600 dark:text-gray-300">Fecha y Hora</th>
                            <th class="p-4 font-semibold text-gray-600 dark:text-gray-300">Acción</th>
                            <th class="p-4 font-semibold text-gray-600 dark:text-gray-300">Detalle</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                        {{#each historial}}
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
                            <td class="p-4 text-gray-900 dark:text-white">
                                {{formatDate this.fecha}}
                            </td>
                            <td class="p-4">
                                <span class="font-medium text-blue-600 dark:text-blue-400">{{this.accion.descripcion}}</span>
                            </td>
                            <td class="p-4 text-gray-600 dark:text-gray-300">
                                Ejecutado automáticamente por calendario
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="3" class="p-8 text-center text-gray-500 dark:text-gray-400">
                                <i class="fas fa-clipboard-check text-4xl mb-3 text-gray-300 dark:text-gray-600 block"></i>
                                No hay acciones registradas
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
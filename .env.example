# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de la base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=sistema_riego

# Seguridad
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_cambiar_en_produccion
JWT_EXPIRES_IN=24h
SESSION_SECRET=tu_clave_secreta_sesion_muy_segura_cambiar_en_produccion

# Arduino API
ARDUINO_API_KEY=tu_clave_api_para_arduino_cambiar_en_produccion

# ============================================
# MQTT Broker Configuration
# ============================================
# Broker público para desarrollo (cambiar en producción)
MQTT_BROKER_URL=mqtt://broker.emqx.io:1883

# Si usas un broker privado con autenticación:
# MQTT_BROKER_URL=mqtt://tu-broker.com:1883
# MQTT_USERNAME=tu_usuario
# MQTT_PASSWORD=tu_password

# Para broker local Mosquitto:
# MQTT_BROKER_URL=mqtt://localhost:1883

# Para EMQX local:
# MQTT_BROKER_URL=mqtt://localhost:1883

MQTT_USERNAME=
MQTT_PASSWORD=

# ============================================
# Scheduler Configuration
# ============================================
# Intervalo del scheduler de riego (formato cron)
# Por defecto: cada minuto (* * * * *)
# Ejemplos:
#   */5 * * * * - Cada 5 minutos
#   0 * * * * - Cada hora
#   0 8,18 * * * - A las 8:00 y 18:00
SCHEDULER_INTERVAL=* * * * *

# ============================================
# Logging Configuration
# ============================================
# Nivel de logging: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# Cache Configuration
# ============================================
# TTL (Time To Live) en segundos
CACHE_DEVICE_TTL=300
CACHE_SENSOR_TTL=60
CACHE_CONFIG_TTL=600
CACHE_USER_TTL=300

# ============================================
# OpenWeather API Configuration
# ============================================
# API Key de OpenWeather (opcional)
OPENWEATHER_API_KEY=

# Coordenadas para pronóstico del clima (por defecto Santiago, Chile)
WEATHER_LAT=-33.4489
WEATHER_LON=-70.6693

# ============================================
# Database Configuration
# ============================================
# Configuración avanzada de base de datos
DB_RETRY_COUNT=5
DB_RETRY_INTERVAL_MS=5000
USE_SEQUELIZE=true
DB_SYNC_ALTER=false
SEQUELIZE_LOG=false

# ============================================
# Security
# ============================================
# CORS Origin (producción)
CORS_ORIGIN=*
